extends layout

block content
  .container
    h1 Irish Mythology Store
    if message
      p.text-muted= message

    if products && products.length
      .row
        each product in products
          .col-md-4.col-sm-6.mb-4
            .card
              .card-body
                h5.card-title= product.name
                if product.type
                  h6.card-subtitle.mb-2.text-muted #{product.type}
                if product.description
                  p.card-text= product.description
                p.card-text
                  strong Price: 
                  | â‚¬#{product.price}
                if product.manufacturer
                  p.card-text
                    strong Manufacturer: 
                    | #{product.manufacturer}
                p.card-text
                  strong In stock: 
                  | #{product.quantity}
                if product.tags && product.tags.length
                  p.mt-2
                    strong Tags:
                  ul.list-inline
                    each tag in product.tags
                      li.list-inline-item.badge.bg-secondary.me-1= tag
    else
      p.mt-3 There are no products available right now. Please check back later.
