extends layout

block content
  .container
    h1 Register
    if error
      .alert.alert-danger= error

    form(method="post", action="/register")
      .mb-3
        label(for="fullName") Full Name
        input#fullName.form-control(type="text", name="fullName", required)

      .mb-3
        label(for="email") Email
        input#email.form-control(type="email", name="email", required)

      .mb-3
        label(for="password") Password
        input#password.form-control(type="password", name="password", required)

      .mb-3
        label(for="phone") Phone
        input#phone.form-control(type="text", name="phone")

      .mb-3
        label(for="addressLine1") Address Line 1
        input#addressLine1.form-control(type="text", name="addressLine1")

      .mb-3
        label(for="addressLine2") Address Line 2
        input#addressLine2.form-control(type="text", name="addressLine2")

      .mb-3
        label(for="city") City
        input#city.form-control(type="text", name="city")

      .mb-3
        label(for="county") County
        input#county.form-control(type="text", name="county")

      .mb-3
        label(for="eircode") Eircode
        input#eircode.form-control(type="text", name="eircode")

      button.btn.btn-primary(type="submit") Create Account
